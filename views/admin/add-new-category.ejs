<%- include('header') %>

            <div class="page-body">

                <!-- New Product Add Start -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-sm-8 m-auto">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-header-2">
                                                <h5>Category Information</h5>
                                            </div>

                                            <form class="theme-form theme-form-2 mega-form"action="/category" method="post" enctype="multipart/form-data">
                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Category Name</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="text" name="cat_name" placeholder="Category Name">
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="col-sm-3 col-form-label form-label-title">Category
                                                        Image</label>
                                                    <div class="form-group col-sm-9">
                                                        <div class="dropzone-wrapper">
                                                            <div class="dropzone-desc">
                                                                
                                                                <input type="file" name="cat_img" id="catimg" accept="image/*" style="display: none;">
                                                                <label for="catimg"><i class="ri-upload-2-line d-block"></i> Choose an image file or drag it here.</label>
                                                            </div>
                                                            <!-- <input type="file" class="dropzone"> -->
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <div class="col-sm-3 form-label-title">Select Category Icon</div>
                                                    <div class="col-sm-9">
                                                        
                                                        <select name="cat_icon" id="iconSelect" onchange="updateImagePreview(this.value)">
                                                            <option value="">Select Icon</option>
                                                            <% const icons = [
                                                                "/public/admin assets/svg/1/biscuit.svg",
                                                                "/public/admin assets/svg/1/breakfast.svg",
                                                                "/public/admin assets/svg/1/cup.svg",
                                                                "/public/admin assets/svg/1/drink.svg",
                                                                "/public/admin assets/svg/1/frozen.svg",
                                                                "/public/admin assets/svg/1/grocery.svg",
                                                                "/public/admin assets/svg/1/meats.svg",
                                                                "/public/admin assets/svg/1/milk.svg",
                                                                "/public/admin assets/svg/1/pet.svg",
                                                                "/public/admin assets/svg/1/vegetable.svg",
                                                            ] %>
                                                            <% icons.forEach((icon) => { %>
                                                                <option value="<%= icon %>"><%= icon %></option>
                                                            <% }) %>
                                                        </select>
                                                        
                                                        <div id="imagePreview"></div>
                                                        <script>
                                                            function updateImagePreview(selectedValue) {
                                                                const imagePreview = document.getElementById('imagePreview');
                                                                if (selectedValue) {
                                                                    imagePreview.innerHTML = `<img src="${selectedValue}" class="img-fluid" width="100" alt="raj">`;
                                                                } else {
                                                                    imagePreview.innerHTML = '';
                                                                }
                                                            }
                                                        </script>
                                                        
                                                    </div>
                                                </div>
                                                <button type="submit">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- New Product Add End -->

                <!-- footer Start -->
                <div class="container-fluid">
                    <footer class="footer">
                        <div class="row">
                            <div class="col-md-12 footer-copyright text-center">
                                <p class="mb-0">Copyright 2022 Â© Fastkart theme by pixelstrap</p>
                            </div>
                        </div>
                    </footer>
                </div>
                <!-- footer En -->
            </div>
            <!-- Container-fluid End -->
        </div>
        <!-- Page Body End -->
    </div>
    <!-- page-wrapper End -->

    <!-- Modal Start -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <h5 class="modal-title" id="staticBackdropLabel">Logging Out</h5>
                    <p>Are you sure you want to log out?</p>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                    <div class="button-box">
                        <button type="button" class="btn btn--no" data-bs-dismiss="modal">No</button>
                        <button type="button" class="btn  btn--yes btn-primary">Yes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal End -->

    <!-- latest js -->
    <script src="/public/admin assets/js/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap js -->
    <script src="/public/admin assets/js/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- feather icon js -->
    <script src="/public/admin assets/js/icons/feather-icon/feather.min.js"></script>
    <script src="/public/admin assets/js/icons/feather-icon/feather-icon.js"></script>

    <!-- scrollbar simplebar js -->
    <script src="/public/admin assets/js/scrollbar/simplebar.js"></script>
    <script src="/public/admin assets/js/scrollbar/custom.js"></script>

    <!-- Sidebar js -->
    <script src="/public/admin assets/js/config.js"></script>

    <!-- bootstrap tag-input js -->
    <script src="/public/admin assets/js/bootstrap-tagsinput.min.js"></script>
    <script src="/public/admin assets/js/sidebar-menu.js"></script>

    <!-- customizer js -->
    <script src="/public/admin assets/js/customizer.js"></script>

    <!--Dropzon js -->
    <script src="/public/admin assets/js/dropzone/dropzone.js"></script>
    <script src="/public/admin assets/js/dropzone/dropzone-script.js"></script>

    <!-- Plugins js -->
    <script src="/public/admin assets/js/notify/bootstrap-notify.min.js"></script>
    <script src="/public/admin assets/js/notify/index.js"></script>

    <!-- select2 js -->
    <script src="/public/admin assets/js/select2.min.js"></script>
    <script src="/public/admin assets/js/select2-custom.js"></script>

    <!-- sidebar effect -->
    <script src="/public/admin assets/js/sidebareffect.js"></script>

    <!-- Theme js -->
    <script src="/public/admin assets/js/script.js"></script>

</body>

</html>