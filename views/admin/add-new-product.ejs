                                    <div class="card-body">
                                        <div class="card-header-2">
                                            <h5>Product Information</h5>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-sm-3 mb-0">Product Name</label>
                                            <div class="col-sm-9">
                                                <input class="form-control" type="text" placeholder="Product Name" name="pro_name">
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-sm-3 col-form-label form-label-title">Category</label>
                                            <div class="col-sm-9">
                                                <select id="categorySelect" class="js-example-basic-single w-100" name="cat_name">
                                                    <option>---Category Menu---</option>
                                                    <% category.map((cat)=>{ %>
                                                        <option value="<%= cat._id %>">
                                                            <%= cat.cat_name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-sm-3 col-form-label form-label-title">Subcategory</label>
                                            <div class="col-sm-9">
                                                <select id="subcategorySelect" class="js-example-basic-single w-100" name="sub_name">
                                                    <option>---Subcategory Menu---</option>
                                                    <% subcategory.map((sub)=>{ %>
                                                        <option value="<%= sub._id %>">
                                                            <%= sub.subcat_name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-sm-3 col-form-label form-label-title">Unit</label>
                                            <div class="col-sm-9">
                                                <select class="js-example-basic-single w-100" name="pro_unit">
                                                    <% let unit=['Kilogram', 'Gram' , 'Pieces' , 'Litter' , 'Miligram' ]
                                                        %>
                                                        <option>---Select Unit---</option>
                                                        <% unit.map((val)=>{%>
                                                            <option value="<%= val %>">
                                                                <%= val %>
                                                            </option>
                                                            <%}) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="mb-4 row align-items-center">
                                            <label class="col-sm-3 col-form-label form-label-title">Tags</label>
                                            <div class="col-sm-9">
                                                <div class="bs-example">
                                                    <input type="text" class="form-control" placeholder="Type tag & hit enter" id="#inputTag" data-role="tagsinput" name="pro_tags">
                                                </div>
                                            </div>
                                        </div>
